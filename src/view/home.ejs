<%- include ('partials-home/_header-home')  %> 
      
        <div class="slide">
            <div class="slide-body">
                <input type="radio" id="i1" name="images" checked />
                <input type="radio" id="i2" name="images" />
                <input type="radio" id="i3" name="images" />
                <input type="radio" id="i4" name="images" />
                <input type="radio" id="i5" name="images" />	
                
                <div class="slide_img" id="one"> <img src="/img/home1.jpg" loading="lazy"> </div>
                <div class="slide_img" id="two"> <img src="/img/home2.jpg" loading="lazy"> </div>
                <div class="slide_img" id="three"> <img src="/img/home3.jpg" loading="lazy"> </div>
                <div class="slide_img" id="four"> <img src="/img/home4.jpg" loading="lazy"> </div>
    
                <div id="nav-slide">
                    <label for="i1" class="dots" id="dot1"></label>
                    <label for="i2" class="dots" id="dot2"></label>
                    <label for="i3" class="dots" id="dot3"></label>
                    <label for="i4" class="dots" id="dot4"></label>
                </div>
            </div>
        </div>

        

        <div class="filtro">
            <h2 class="centrado texto-blanco">Talleres</h2>
            
        </div>

        <div id="tarjetas" class="tarjetas">
            <% var cont=0;%>
            <% var nombrePersona="";%>
            <% if (dataActividades) { %>
                <div class="row">
                <% for(var i=0; i < dataActividades.length; i++) { %>
                    <% cont=1;%>
                    
                        <div class="tarjeta">
                            <div class="baner">
                                <p class="mayus negrita"><%= dataActividades[i].nombre_actividad %></p>
                                
                                <% for(var j=0; j < dataPersonas.length; j++) { %>
                                    <% if (dataActividades[i].rut_responsable == dataPersonas[j].rut) { %>
                                        
                                        <% nombrePersona = dataPersonas[j].nombres + " " + dataPersonas[j].apellidos %>
                                    <% } %>
                                <% } %>

                                <p><%= nombrePersona %></p>
                            </div>
                            
                            <a href="/servicio/<%= dataActividades[i].codigo_actividad %>">
                                <img src="/img/<%= 'default.png'%>" loading="lazy" >
                            </a>
                        </div>
                   
                    
                <% } %>
                
                
                </div>
            <% } %>
            
            <% if (cont==0) { %>
                <h4 id="msj" class="centrado texto-ng text-h4">Lo sentimos, no hay publicaciones disponibles.</a></h4>
            <% } %>
        </div>

        
